source 'http://rubygems.org'

gem 'rails', '>=3.0.1'

gem 'devise'
gem 'flutie'
gem 'haml', '>= 3.0.0'
gem 'haml-rails'
gem 'mysql2'
gem 'rdiscount', :git => 'git://github.com/rtomayko/rdiscount.git'
