- if can?(:create, Ip)
    #links
        = link_to 'New Ip', new_ip_path

%h2 Listing ips
%table
    %tr
        %th Name
        %th Address
        %th Description
        %th POC
        %th
        %th

    - @ips.each do |ip|
        %tr
        %td= link_to_if can?(:read, ip), ip.name, ip
        %td= ip.address
        %td= ip.description
        %td
            :markdown
                [#{h ip.user.name}](mailto:#{h ip.user.email})
        %td= link_to_if can?(:update, ip), 'Edit', edit_ip_path(ip)
        %td= link_to_if can?(:destroy, ip), 'Destroy', ip, :confirm => 'Are you sure?', :method => :delete
