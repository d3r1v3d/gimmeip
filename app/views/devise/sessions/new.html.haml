%h2 Sign in

= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
    %p
        = f.label :email, 'Username or e-mail address'
        %br/
        = f.text_field :email
    %p
        = f.label :password
        %br/
        = f.password_field :password
    %p= f.submit 'Sign in'

= render :partial => 'devise/shared/links'
