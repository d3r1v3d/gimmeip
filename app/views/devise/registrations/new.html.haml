#main_table
    %h2 Sign up
    = form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
        = devise_error_messages!
        %p
            %div{style: 'width: 100%;'}
                = f.label :name, 'Username'
            %div{style: 'width: 100%; line-height: 3em;'}        
                %div{style: 'float: left; display: inline; margin-left: 10px;'}
                    = f.text_field :name
                %div{style: 'float: left; display: inline; font-weight: bold; -moz-border-radius: 6px; background-color: #c02942; border: 2px solid #ff6b6b; margin-left: 20px; padding: 5px 10px;'}
                    = resource.errors.include?(:name) ? resource.errors[:name].join(', ') : ''
                %div{style: 'clear: both'}
        %p
            = f.label :email
            %br/
            = f.text_field :email
        %p
            = f.label :password
            %br/
            = f.password_field :password
        %p
            = f.label :password_confirmation
            %br/
            = f.password_field :password_confirmation
        %p= f.submit "Sign up"

    = render :partial => "devise/shared/links"
