%html
    %head
        %title Gimme IP
        = stylesheet_link_tag :all
        = stylesheet_link_tag :flutie
        = javascript_include_tag :defaults
        = csrf_meta_tag
    %body
        .notice= notice
        .alert= alert
        %ul.hmenu
            - if user_signed_in?
                %li
                    :markdown
                        Welcome **[#{h current_user.name}](#{edit_user_registration_path(current_user)})**
            = render 'devise/menu/registration_items'
            = render 'devise/menu/login_items'
        = yield
